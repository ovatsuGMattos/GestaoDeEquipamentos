@using GestaoDeEquipamentos.ConsoleApp.Models

@model ExcluirChamadoViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Exclusão de Chamado - Gestão de Equipamentos</title>

    <style>
        :root {
            --fundo-principal: #1e1e1e;
            --fundo-secundario: #2c2c2e;
            --cor-borda: #3a3a3c;
            --cor-principal: green;
        }

        body {
            margin: 0;
            padding: 20px;
            background-color: var(--fundo-principal);
            color: var(--cor-principal);
            font-family: 'Segoe UI', sans-serif;
        }

        h1, h3 {
            margin-bottom: 10px;
        }

        hr {
            border: 1px solid var(--cor-borda);
            margin: 20px 0;
        }

        a {
            color: var(--cor-principal);
            text-decoration: none;
            font-weight: 500;
            margin-left: 15px;
        }

            a:hover {
                color: lawngreen;
                text-decoration: underline;
            }

        form {
            background-color: var(--fundo-secundario);
            border: 1px solid var(--cor-borda);
            border-radius: 10px;
            padding: 20px;
            max-width: 600px;
        }

        p {
            font-weight: bold;
            margin-top: 0;
        }

        button {
            padding: 10px 20px;
            background-color: green;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: lawngreen;
                color: #1e1e1e;
            }
    </style>
</head>

<body>
    <h1>Gestão de Equipamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/chamados/cadastrar">Cadastrar Novo Chamado</a> /
    <a href="/chamados/visualizar">Visualizar Chamados</a>

    <hr />

    <h3>Exclusão de Chamado</h3>

    <p>Você tem certeza que deseja excluir o registro "@Model.Titulo"?</p>

    <form action="/chamados/excluir/@Model.Id" method="post">
        <button type="submit">Confirmar</button>
        <a href="/chamados/visualizar">Voltar</a>
    </form>
</body>
</html>