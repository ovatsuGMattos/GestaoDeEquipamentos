@using GestaoDeEquipamentos.ConsoleApp.Models;
@model CadastrarChamadoViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Cadastro de Chamado - Gestão de Equipamentos</title>

    <style>
        :root {
            --fundo-principal: #1e1e1e;
            --fundo-secundario: #2c2c2e;
            --cor-borda: #3a3a3c;
            --cor-principal: green;
        }

        body {
            margin: 0;
            padding: 20px;
            background-color: var(--fundo-principal);
            color: var(--cor-principal);
            font-family: 'Segoe UI', sans-serif;
        }

        h1, h3 {
            margin-bottom: 10px;
        }

        hr {
            border: 1px solid var(--cor-borda);
            margin: 20px 0;
        }

        a {
            color: var(--cor-principal);
            text-decoration: none;
            font-weight: 500;
        }

            a:hover {
                color: lawngreen;
                text-decoration: underline;
            }

        form {
            background-color: var(--fundo-secundario);
            border: 1px solid var(--cor-borda);
            border-radius: 10px;
            padding: 20px;
            max-width: 600px;
        }

        label {
            display: block;
            margin-top: 15px;
            font-weight: bold;
        }

        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            background-color: #1e1e1e;
            border: 1px solid var(--cor-borda);
            border-radius: 5px;
            color: green;
        }

        button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: green;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: lawngreen;
                color: #1e1e1e;
            }
    </style>
</head>

<body>
    <h1>Gestão de Equipamentos</h1>

    <hr />

    <a href="/">Página Inicial</a> /
    <a href="/chamados/visualizar">Visualizar Chamados</a>

    <hr />

    <h3>Cadastro de Chamado</h3>

    <form action="/chamados/cadastrar" method="post">
        <label for="Titulo">Título do Chamado:</label>
        <input type="text" name="Titulo" id="Titulo" />

        <label for="Descricao">Descrição do Chamado:</label>
        <textarea name="Descricao" id="Descricao"></textarea>

        <label for="EquipamentoId">Equipamento do Chamado:</label>
        <select name="EquipamentoId" id="EquipamentoId">
            @foreach (var equipamento in Model.EquipamentosDisponiveis)
            {
                <option value="@equipamento.Id">@equipamento.Nome</option>
            }
        </select>

        <hr />

        <button type="submit">Gravar</button>
    </form>
</body>
</html>