@using GestaoDeEquipamentos.ConsoleApp.Models
@using GestaoDeEquipamentos.ConsoleApp.ModuloFabricante
@using static GestaoDeEquipamentos.ConsoleApp.Models.EditarFabricantesViewModel

@model ExcluirEquipamentoViewModel;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Exclusão de Equipamento - Gestão de Equipamentos</title>

    <style>
        :root {
            --fundo-principal: #1e1e1e;
            --fundo-secundario: #2c2c2e;
            --cor-borda: #3a3a3c;
            --cor-texto: green;
            --cor-botao-bg: green;
            --cor-botao-hover: lawngreen;
        }

        body {
            margin: 0;
            padding: 20px;
            background-color: var(--fundo-principal);
            color: var(--cor-texto);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        h1, h3 {
            margin-bottom: 15px;
        }

        hr {
            border: 1px solid var(--cor-borda);
            margin: 20px 0;
        }

        a {
            color: var(--cor-texto);
            text-decoration: none;
            margin-right: 15px;
            font-weight: 500;
        }

            a:hover {
                color: var(--cor-botao-hover);
                text-decoration: underline;
            }

        form {
            background-color: var(--fundo-secundario);
            border: 1px solid var(--cor-borda);
            border-radius: 10px;
            padding: 25px 20px;
            max-width: 450px;
        }

        p {
            font-size: 1.1em;
        }

        button {
            background-color: var(--cor-botao-bg);
            color: white;
            padding: 10px 25px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            button:hover {
                background-color: var(--cor-botao-hover);
                color: black;
            }

        @@media (max-width: 600px) {
            body {
                padding: 15px;
            }

            form {
                max-width: 100%;
                padding: 20px;
            }
        }
    </style>
</head>

<body>
    <h1>Gestão de Equipamentos</h1>

    <hr />
    <a href="/">Página Inicial</a>
    <a href="/equipamentos/cadastrar">Cadastrar Equipamentos</a>
    <a href="/equipamentos/visualizar">Visualizar Equipamentos</a>
    <hr />

    <h3>Exclusão de Equipamento</h3>

    <p>Você tem certeza que deseja excluir o registro <strong>@Model.Nome</strong>?</p>

    <form action="/equipamentos/excluir/@Model.Id" method="post">
        <button type="submit">Confirmar</button>
        <a href="/equipamentos/visualizar">Voltar</a>
    </form>
</body>
</html>