@using GestaoDeEquipamentos.ConsoleApp.Models
@using GestaoDeEquipamentos.ConsoleApp.ModuloFabricante
@using static GestaoDeEquipamentos.ConsoleApp.Models.EditarFabricantesViewModel

@model CadastrarEquipamentoViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Cadastro de Equipamentos - Gestão De Equipamentos</title>

    <style>
        :root {
            --fundo-principal: #1e1e1e;
            --fundo-secundario: #2c2c2e;
            --cor-borda: #3a3a3c;
            --cor-principal: green;
        }

        body {
            margin: 0;
            padding: 20px;
            background-color: var(--fundo-principal);
            color: var(--cor-principal);
            font-family: 'Segoe UI', sans-serif;
        }

        h1, h3 {
            margin-bottom: 10px;
        }

        hr {
            border: 1px solid var(--cor-borda);
            margin: 20px 0;
        }

        form {
            background-color: var(--fundo-secundario);
            border: 1px solid var(--cor-borda);
            border-radius: 10px;
            padding: 20px;
            max-width: 600px;
        }

        label {
            display: block;
            margin-top: 15px;
            font-weight: bold;
        }

        input[type="text"],
        input[type="date"],
        select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            background-color: #1e1e1e;
            border: 1px solid var(--cor-borda);
            border-radius: 5px;
            color: green;
        }

        button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: green;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: lawngreen;
                color: #1e1e1e;
            }
    </style>
</head>

<body>
    <h1>Gestão de Equipamentos</h1>

    <h3>Cadastro de Equipamentos</h3>

    <form action="/equipamentos/cadastrar/" method="post">

        <label for="Nome">Nome Do Equipamento</label>
        <input type="text" name="Nome" id="Nome" />

        <label for="PrecoAquisicao">Preço de Aquisição do Equipamento:</label>
        <input type="text" name="PrecoAquisicao" id="PrecoAquisicao" />

        <label for="DataFabricacao">Data de Fabricação do Equipamento:</label>
        <input type="date" name="DataFabricacao" id="DataFabricacao" />

        <label for="FabricanteId">Fabricante do Equipamento:</label>
        <select name="FabricanteId" id="FabricanteId">
            @foreach (var fabricante in Model.FabricantesDisponiveis)
            {
                <option value="@fabricante.Id">@fabricante.Nome</option>
            }
        </select>

        <hr />

        <button type="submit">Gravar</button>

    </form>
</body>
</html>