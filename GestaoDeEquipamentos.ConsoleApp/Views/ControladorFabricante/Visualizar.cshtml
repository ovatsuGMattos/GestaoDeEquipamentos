@using GestaoDeEquipamentos.ConsoleApp.Models
@using GestaoDeEquipamentos.ConsoleApp.ModuloFabricante

@model VizualizarFabricantesViewModel;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Visualização de Fabricantes - Gestão De Equipamentos</title>

    <style>
        :root {
            --fundo-principal: #1e1e1e;
            --fundo-secundario: #2c2c2e;
            --cor-borda: #3a3a3c;
            --cor-texto: green;
            --cor-texto-secundario: #ccc;
        }

        body {
            margin: 0;
            background-color: var(--fundo-principal);
            color: var(--cor-texto-secundario);
            font-family: 'Segoe UI', sans-serif;
            padding: 40px 20px;
            display: flex;
            justify-content: center;
        }

        main {
            background-color: var(--fundo-secundario);
            padding: 30px 40px;
            border-radius: 9px;
            max-width: 700px;
            width: 100%;
            border: 1px solid var(--cor-borda);
            box-sizing: border-box;
        }

        h1 {
            color: var(--cor-texto);
            margin-bottom: 10px;
            text-align: center;
        }

        hr {
            border: none;
            border-bottom: 1px solid var(--cor-borda);
            margin: 20px 0;
        }

        nav {
            text-align: center;
            margin-bottom: 20px;
        }

            nav a {
                color: var(--cor-texto);
                text-decoration: none;
                margin: 0 15px;
                font-weight: 500;
                font-size: 16px;
            }

                nav a:hover {
                    color: lawngreen;
                    text-decoration: underline;
                }

        h3 {
            color: var(--cor-texto);
            margin-bottom: 20px;
            text-align: center;
        }

        ul {
            list-style: none;
            padding-left: 0;
        }

        li {
            background-color: var(--fundo-principal);
            border: 1px solid var(--cor-borda);
            padding: 15px 20px;
            margin-bottom: 10px;
            border-radius: 6px;
            color: var(--cor-texto-secundario);
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 16px;
        }

            li a {
                color: lawngreen;
                text-decoration: none;
                margin-left: 15px;
                font-weight: 600;
            }

                li a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 768px) {
            body {
                padding: 20px;
            }

            main {
                padding: 20px;
                max-width: 100%;
            }

            li {
                flex-direction: column;
                align-items: flex-start;
                font-size: 14px;
            }

                li a {
                    margin-left: 0;
                    margin-top: 8px;
                }

            nav a {
                display: inline-block;
                margin: 10px 8px;
            }
        }
    </style>
</head>

<body>
    <main>
        <h1>Gestão de Equipamentos</h1>
        <hr />
        <nav>
            <a href="/">Página Inicial</a>
            <a href="/fabricantes/cadastrar">Cadastrar Novo Fabricante</a>
        </nav>
        <hr />

        <h3>Visualização de Fabricantes</h3>
        <ul>
            @foreach (DetalhesFabricanteViewModel f in Model.registros)
            {
                <li>
                    @f.ToString()
                    <span>
                        <a href="/fabricantes/editar/@f.Id">Editar</a>
                        <a href="/fabricantes/excluir/@f.Id">Excluir</a>
                    </span>
                </li>
            }
        </ul>
    </main>
</body>
</html>